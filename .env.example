# Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment mode (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_KEY=your-secure-api-key-minimum-16-characters
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# Base directory for all application files
# All relative paths will be resolved relative to this directory
# CHURN_BASE_DIR=.

# Main directories
# CHURN_DATA_DIR=data
# CHURN_MODELS_DIR=models
# CHURN_LOGS_DIR=logs

# Processed data directory (usually under data_dir)
# CHURN_PROCESSED_DIR=processed

# Specific file paths (optional - will use defaults if not set)
# CHURN_RAW_DATA_PATH=data/raw/customer_data.csv
# CHURN_PROCESSED_FEATURES_PATH=data/processed/processed_features.csv
# CHURN_PROCESSED_TARGET_PATH=data/processed/processed_target.csv
# CHURN_MODEL_PATH=models/churn_model.joblib
# CHURN_FEATURE_COLUMNS_PATH=models/feature_columns.json
# CHURN_PREPROCESSOR_PATH=models/preprocessor.joblib
# CHURN_MLFLOW_RUN_ID_PATH=models/mlflow_run_id.txt

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# MLflow Configuration
MLFLOW_TRACKING_URI=file://./mlruns
MLFLOW_EXPERIMENT_NAME=customer_churn
# MLFLOW_RUN_ID=

# Model Configuration
MODEL_PATH=models/churn_model.joblib
PREPROCESSOR_PATH=models/preprocessor.joblib
FEATURE_COLUMNS_PATH=models/feature_columns.json

# Performance Thresholds
CHURN_THRESHOLD=0.8
ACCURACY_THRESHOLD=0.8
PERFORMANCE_CHECK_INTERVAL=3600

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-for-token-signing
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true

# Security Headers
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
SECURITY_HEADERS_ENABLED=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log
LOG_ROTATION=true
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# DATABASE CONFIGURATION (Future Use)
# =============================================================================

# Database Connection (when migrating from file-based storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/churn_db
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Notifications (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Slack Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#alerts

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Settings (development only)
DEBUG=false
RELOAD_ON_CHANGE=true
PROFILE_PERFORMANCE=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_DATA_PATH=tests/fixtures/test_data.csv

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Build Arguments
PYTHON_VERSION=3.12
DEBIAN_VERSION=bullseye-slim

# Container Resource Limits
MEMORY_LIMIT=2g
CPU_LIMIT=1.0

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your-github-token
CODECOV_TOKEN=your-codecov-token

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=customer-churn-predictor
DOCKER_TAG=latest

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# API Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Model Caching
ENABLE_MODEL_CACHE=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LOG_PATH=logs/audit.log
AUDIT_RETENTION_DAYS=90

# Data Privacy
DATA_RETENTION_DAYS=365
ANONYMIZE_LOGS=true
GDPR_COMPLIANCE=true